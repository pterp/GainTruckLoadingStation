  <POU Name="InputBelt" Id="{2a85e218-1bdb-4ed5-9bd6-698ec9057a87}" SpecialFunc="None">
    <Declaration><![CDATA[FUNCTION_BLOCK InputBelt
VAR_INPUT
	InputSensor : DEV_Sensor_stOutput;
	OutputSensor : DEV_Sensor_stOutput;
	CommandA : INT;
END_VAR
VAR_OUTPUT
	NewBox : BOOL;
	BeltOn : BOOL;
	BoxReady : BOOL;
END_VAR
VAR
	State : INT;
END_VAR
]]></Declaration>
    <Implementation>
      <ST><![CDATA[CASE CommandA OF
	Command.Error:
	BeltOn := TRUE;
END_CASE



CASE State OF
	10://startup //reset?
		IF InputSensor.Detecting = TRUE AND OutputSensor.Detecting = TRUE THEN
			State := 11;
		ELSIF InputSensor.Detecting = FALSE AND OutputSensor.Detecting = FALSE THEN
			State := 20;
		ELSIF InputSensor.Detecting = TRUE AND OutputSensor.Detecting = FALSE THEN
			State := 30;
		ELSIF InputSensor.Detecting = FALSE AND OutputSensor.Detecting = TRUE THEN
			State := 40;		
		END_IF
		
	11://startup boxes on belt.
		NewBox := FALSE;
		BeltOn := FALSE;
		BoxReady := TRUE;
	
		IF OutputSensor.Detecting = FALSE THEN
			State := 20;
		END_IF
		
	20://No Box
		NewBox := TRUE;
		BeltOn := FALSE;
		BoxReady := FALSE;
		
		IF InputSensor.Detecting = TRUE AND OutputSensor = FALSE THEN
			State := 30;
		END_IF
	
	30://retrieve box
		NewBox := FALSE;
		BeltOn := TRUE;
		BoxReady := FALSE;
		
		IF InputSensor.Detecting = FALSE AND OutputSensor = TRUE THEN
			State := 40;
		END_IF
		
	40://boxready
		NewBox := FALSE;
		BeltOn := FALSE;
		BoxReady := TRUE;
		
		IF OutputSensor.Detecting = FALSE THEN
			State := 20;
		END_IF
		
	101://error
		NewBox := FALSE;
		BeltOn := FALSE;
		BoxReady := FALSE;
	
	102://pause
		NewBox := FALSE;
		BeltOn := FALSE;
		BoxReady := FALSE;
		
	103://stop
		NewBox := FALSE;
		BeltOn := FALSE;
		BoxReady := FALSE;
		
	104://reset
	
	
END_CASE]]></ST>
    </Implementation>
